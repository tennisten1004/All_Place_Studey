<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrototypeA.Page4"
             Title="Page4"
             BackgroundColor="Gray">
    <VerticalStackLayout
        Spacing="5">
        <Button
            Text="Mathematics"
            Clicked="NavigateToMath"
            WidthRequest="410" 
            HeightRequest="100"
            FontSize="48"
            FontAutoScalingEnabled="True"
            TextColor="#27ac1f"
            BackgroundColor="White"/>
        <Button
            Text="Biology"
            Clicked="NavigateToBio"
            WidthRequest="410" 
            HeightRequest="100"
            FontSize="48"
            FontAutoScalingEnabled="True"
            TextColor="#27ac1f"
            BackgroundColor="White"/>
        <Button
            Text="Physics"
            Clicked="NavigateToPhy"
            WidthRequest="410" 
            HeightRequest="100"
            FontSize="48"
            FontAutoScalingEnabled="True"
            TextColor="#27ac1f"
            BackgroundColor="White"/>
        <Button
            Text="Chemical"
            Clicked="NavigateToChem"
            WidthRequest="410" 
            HeightRequest="100"
            FontSize="48"
            FontAutoScalingEnabled="True"
            TextColor="#27ac1f"
            BackgroundColor="White"/>
    </VerticalStackLayout>
</ContentPage>